                Placement="Top">
                <Grid>
                    <Border Style="{StaticResource BorderStyle}">
                        <TextBlock
                            Style="{StaticResource PopupTextStyle}"
                            Text="Entity ID:" />        
                    </Border>
                </Grid>
            </Popup>
            <Popup
                Width="120"
                IsOpen="{Binding ElementName=Card11ValueTextBox, Path=IsMouseOver, Mode=OneWay}"
                PlacementTarget="{Binding ElementName=Card11ValueTextBox}"
                Style="{StaticResource PopupStyle}"
                Placement="Top">
                <Grid>
                    <Border Style="{StaticResource BorderStyle}">
                        <TextBlock
                            Style="{StaticResource PopupTextStyle}"
                            Text="Entity value:" /> 
                    </Border>
                </Grid>
            </Popup>
            <Popup
                Width="140"
                IsOpen="{Binding ElementName=RemoveFromCard11, Path=IsMouseOver, Mode=OneWay}"
                PlacementTarget="{Binding ElementName=RemoveFromCard11}"
                Style="{StaticResource PopupStyle}"
                Placement="Top">
                <Grid>
                    <Border Style="{StaticResource BorderStyle}">
                        <TextBlock
                            Style="{StaticResource PopupTextStyle}"
                            Text="Remove from card" />
                    </Border>
                </Grid>
            </Popup>
            <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
        </Grid>
        <ItemsControl ItemsSource="{Binding LinesHolder}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas 
                        IsHitTestVisible="False" 
                        Width="800"
                        Background="Transparent"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Line X1="{Binding From.X}" Y1="{Binding From.Y}"
                      X2="{Binding To.X}" Y2="{Binding To.Y}"
                      Stroke="Blue" StrokeThickness="5"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>

    